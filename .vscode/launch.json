    "version": "0.2.0",
    "configurations": [
        {
            "name": "(Identity) Attach",
            "type": "node",
            "request": "attach",
            "port": 9229,
            "address": "localhost",
            "localRoot": "${workspaceFolder}/identity-service/",
            "remoteRoot": "/usr/src/app",
            "protocol": "inspector"
        },
        {
            "name": "(Identity) Test",
            "command": "cd identity-service; npm run test:debug",
            "request": "launch",
            "type": "node-terminal"
        },
        {
            "name": "(Content Node) Attach",
            "type": "node",
            "request": "attach",
            "port": 9700,
            "address": "localhost",
            "localRoot": "${workspaceFolder}/creator-node/",
            "remoteRoot": "/usr/src/app",
            "protocol": "inspector"
        },
        {
            "name": "(Content Node) Test",
            "command": "cd creator-node; npm run test:debug",
            "request": "launch",
            "type": "node-terminal"
        },
        {
            "name": "(Discovery Node) Attach",
            "type": "python",
            "request": "attach",
            "port": 5000,
            "address": "localhost",
            "localRoot": "${workspaceFolder}/discovery-provider/",
            "remoteRoot": "/usr/src/app",
            "protocol": "inspector"
        },
        {
            "name": "(Discovery Node) Test",
            "command": "cd discovery-provider; pytest src/api/v1/api_unit_test.py",
            "request": "launch",
            "type": "python"
        }
    ]
}