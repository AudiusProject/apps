    "version": "0.2.0",
    "configurations": [
        {
            "name": "(Content Node 1) Attach",
            "type": "node",
            "request": "attach",
            // Increment this port to connect to a different content node instance
            "port": 9230,
            "address": "localhost",
            "localRoot": "${workspaceFolder}",
            "remoteRoot": "/usr/src/app",
            "protocol": "inspector",
            "restart": true
        },
        {
            "command": "npm run test",
            "name": "(Content Node 1) Test",
            "request": "launch",
            "type": "node-terminal"
        }
    ]
}