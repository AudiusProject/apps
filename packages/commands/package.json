{
  "name": "@audius/commands",
  "version": "1.0.31",
  "private": true,
  "description": "Collection of command useful for debugging audius-protocol",
  "main": "dist/index.js",
  "bin": {
    "audius-cmd": "dist/index.js"
  },
  "scripts": {
    "audius-cmd": "node dist/index.js",
    "build:dist": "turbo run build",
    "build": "esbuild --bundle --platform=node --loader:.wasm=binary --outfile=dist/index.js src/index.mjs",
    "watch:dist": "turbo run watch",
    "watch": "esbuild --bundle --platform=node --loader:.wasm=binary --outfile=dist/index.js --watch=forever src/index.mjs",
    "test": "bats test"
  },
  "author": "Audius",
  "license": "Apache-2.0",
  "dependencies": {
    "@audius/sdk": "*",
    "@audius/sdk-legacy": "*",
    "@audius/spl": "*",
    "@solana/spl-token": "0.3.8",
    "@solana/web3.js": "1.93.4",
    "bn.js": "^5.2.1",
    "chalk": "^5.0.1",
    "commander": "^9.4.0",
    "esbuild": "^0.24.0"
  },
  "devDependencies": {
    "bats": "^1.8.2",
    "bats-assert": "^2.0.0",
    "bats-support": "0.3.0"
  }
}
