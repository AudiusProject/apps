{
  "name": "@audius/ddex-server",
  "version": "0.0.3",
  "description": "Backend server for DDEX ingestion (also serves frontend as static assets)",
  "main": "index.js",
  "scripts": {
    "build": "tsc",
    "start:prod": "NODE_ENV=production node dist/index.js",
    "start": "IS_DEV=true nodemon src/index.ts",
    "dev:stage": "NODE_ENV=stage turbo run start --filter=@audius/ddex-server",
    "dev:prod": "NODE_ENV=production turbo run start --filter=@audius/ddex-server",
    "lint": "eslint src --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "lint:fix": "eslint --fix src --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "verify": "concurrently \"npm:build\" \"npm:lint\""
  },
  "author": "Audius",
  "dependencies": {
    "@audius/sdk": "*",
    "@trpc/server": "10.38.5",
    "@types/multer": "1.4.11",
    "cors": "2.8.5",
    "decompress": "4.2.1",
    "dotenv": "16.3.1",
    "express": "4.18.2",
    "fast-xml-parser": "4.3.2",
    "fastq": "1.16.0",
    "linkedom": "0.15.6",
    "multer": "1.4.5-lts.1",
    "postgres": "3.4.3",
    "uuid": "9.0.1",
    "zod": "3.22.4"
  },
  "devDependencies": {
    "@types/decompress": "4.2.7",
    "@types/express": "4.17.21",
    "@types/node": "20.10.6",
    "@types/uuid": "9.0.7",
    "@typescript-eslint/eslint-plugin": "6.17.0",
    "@typescript-eslint/parser": "6.17.0",
    "eslint": "8.56.0",
    "eslint-config-prettier": "9.1.0",
    "eslint-plugin-prettier": "5.1.2",
    "nodemon": "3.0.2",
    "prettier": "3.1.1",
    "ts-node": "10.9.2",
    "typescript": "5.3.3"
  }
}
