{
  "name": "@audius/ddex-webapp-server",
  "version": "0.0.20",
  "private": true,
  "description": "Backend server for DDEX ingestion (also serves frontend as static assets)",
  "main": "index.js",
  "scripts": {
    "build": "tsc",
    "start:prod": "node dist/index.js",
    "start": "IS_DEV=true nodemon src/index.ts",
    "dev:dev": "turbo run start --filter=@audius/ddex-webapp-server",
    "dev:stage": "NETWORK=stage turbo run start --filter=@audius/ddex-webapp-server",
    "dev:prod": "NETWORK=prod turbo run start --filter=@audius/ddex-webapp-server",
    "lint": "eslint src --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "lint:fix": "eslint --fix src --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "verify": "concurrently \"npm:build\" \"npm:lint\""
  },
  "author": "Audius",
  "dependencies": {
    "@audius/sdk": "*",
    "@aws-sdk/client-s3": "3.504.0",
    "@aws-sdk/s3-request-presigner": "3.504.0",
    "@trpc/server": "10.38.4",
    "connect-mongodb-session": "5.0.0",
    "cors": "2.8.5",
    "decompress": "4.2.1",
    "dotenv": "16.3.1",
    "express": "4.18.2",
    "express-session": "1.18.0",
    "fast-xml-parser": "4.3.2",
    "fastq": "1.16.0",
    "hashids": "2.3.0",
    "mongodb": "6.3.0",
    "mongoose": "8.1.0",
    "multer": "1.4.5-lts.1",
    "uuid": "9.0.1",
    "zod": "3.22.4"
  },
  "devDependencies": {
    "@types/connect-mongodb-session": "2.4.7",
    "@types/cors": "2.8.17",
    "@types/express": "4.17.21",
    "@types/express-session": "1.17.10",
    "@types/node": "20.10.6",
    "@typescript-eslint/eslint-plugin": "6.17.0",
    "@typescript-eslint/parser": "6.17.0",
    "eslint": "8.56.0",
    "eslint-config-prettier": "9.1.0",
    "eslint-plugin-prettier": "5.1.2",
    "nodemon": "3.0.2",
    "prettier": "3.1.1",
    "typescript": "5.3.3"
  }
}
