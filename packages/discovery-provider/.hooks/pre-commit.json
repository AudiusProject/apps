{
  "steps": [
    {
      "name": "Sort imports",
      "command": "isort --diff --check --skip ./src/tasks/core/gen --skip ./plugins ."
    },
    {
      "name": "Flake8",
      "command": "flake8 --exclude=./src/tasks/core/gen,./plugins ."
    },
    {
      "name": "Format",
      "command": "black --diff --check --exclude ./src/tasks/core/gen ."
    },
    {
      "name": "Typecheck",
      "command": "mypy --exclude ./src/tasks/core/gen ."
    }
  ]
}
