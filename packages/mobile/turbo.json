{
  "extends": ["//"],
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**", "build/**"],
      "outputLogs": "new-only"
    },
    "android": {
      "dependsOn": ["build"],
      "cache": false,
      "persistent": true,
      "outputLogs": "new-only"
    },
    "ios": {
      "dependsOn": ["build"],
      "cache": false,
      "persistent": true,
      "outputLogs": "new-only"
    },
    "bundle:ios": {
      "outputs": ["./ios/main.jsbundle"],
      "dependsOn": ["build"],
      "outputLogs": "new-only"
    }
  }
}
