{
  "extends": ["//"],
  "tasks": {
    "build": {
      "dependsOn": [
        "@audius/common#build",
        "@audius/sdk#build:native",
        "@audius/fixed-decimal#build"
      ],
      "outputs": ["dist/**", "build/**"],
      "outputLogs": "new-only"
    },
    "start": {
      "cache": false,
      "persistent": true,
      "dependsOn": [
        "@audius/common#build",
        "@audius/sdk#build:native",
        "@audius/fixed-decimal#build"
      ],
      "outputLogs": "new-only"
    },
    "typecheck": {
      "outputLogs": "new-only"
    },
    "verify": {
      "outputLogs": "new-only"
    },
    "android": {
      "dependsOn": ["build"],
      "cache": false,
      "persistent": true,
      "outputLogs": "new-only"
    },
    "ios": {
      "dependsOn": ["build"],
      "cache": false,
      "persistent": true,
      "outputLogs": "new-only"
    },
    "bundle:ios": {
      "outputs": ["./ios/main.jsbundle"],
      "dependsOn": ["build"],
      "outputLogs": "new-only"
    }
  }
}
