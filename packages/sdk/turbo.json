{
  "extends": ["//"],
  "tasks": {
    "build": {
      "inputs": ["src/**/*", "rollup.config.ts", "tsconfig.json"],
      "outputs": ["dist/index.cjs.js", "dist/index.esm.js", "dist/index.d.ts"],
      "dependsOn": ["^build"],
      "outputLogs": "new-only"
    },
    "build:native": {
      "inputs": ["src/**/*", "rollup.sdk.native.config.ts", "tsconfig.json"],
      "outputs": ["dist/index.native.js"],
      "dependsOn": ["^build"],
      "outputLogs": "new-only"
    },
    "build:browser": {
      "inputs": ["src/**/*", "rollup.sdk.browser.config.ts", "tsconfig.json"],
      "outputs": ["dist/index.browser.cjs.js", "dist/index.browser.esm.js"],
      "dependsOn": ["^build"],
      "outputLogs": "new-only"
    }
  }
}
