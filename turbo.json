{
  "$schema": "https://turbo.build/schema.json",
  "pipeline": {
    "build": {
      "outputs": ["dist/**", "build/**"],
      "dependsOn": ["^build"],
      "outputMode": "new-only"
    },
    "start": {
      "cache": false,
      "persistent": true,
      "dependsOn": ["^build"],
      "outputMode": "new-only"
    },
    "@audius/compose#start": {
      "dependsOn": ["^build"],
      "cache": false,
      "outputMode": "new-only"
    },
    "audius-client#start:dev": {
      "dependsOn": ["^build"],
      "cache": false,
      "persistent": true,
      "outputMode": "new-only"
    },
    "audius-client#start:prod": {
      "dependsOn": ["^build"],
      "cache": false,
      "persistent": true,
      "outputMode": "new-only"
    },
    "audius-client#start:stage": {
      "dependsOn": ["^build"],
      "cache": false,
      "persistent": true,
      "outputMode": "new-only"
    },
    "audius-mobile-client#android:dev": {
      "dependsOn": ["^build"],
      "cache": false,
      "persistent": true,
      "outputMode": "new-only"
    },
    "audius-mobile-client#android:prod": {
      "dependsOn": ["^build"],
      "cache": false,
      "persistent": true,
      "outputMode": "new-only"
    },
    "audius-mobile-client#android:stage": {
      "dependsOn": ["^build"],
      "cache": false,
      "persistent": true,
      "outputMode": "new-only"
    },
    "audius-mobile-client#ios:dev": {
      "dependsOn": ["^build"],
      "cache": false,
      "persistent": true,
      "outputMode": "new-only"
    },
    "audius-mobile-client#ios:prod": {
      "dependsOn": ["^build"],
      "cache": false,
      "persistent": true,
      "outputMode": "new-only"
    },
    "audius-mobile-client#ios:stage": {
      "dependsOn": ["^build"],
      "cache": false,
      "persistent": true,
      "outputMode": "new-only"
    },
    "lint": {
      "outputMode": "new-only"
    },
    "lint:fix": {
      "outputMode": "new-only"
    },
    "verify": {
      "outputMode": "new-only"
    },
    "test": {
      "outputs": ["coverage/**"],
      "dependsOn": []
    }
  }
}
